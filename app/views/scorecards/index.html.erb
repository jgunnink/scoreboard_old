<%= render 'pages/home' unless user_signed_in? %>

<% if user_signed_in? %>
  <div class="panel panel-heading">
      <%= link_to 'New Scorecard', new_scorecard_path, class: "btn btn-primary" %> 
      <%= link_to 'My Scorecards', new_scorecard_path, class: "btn btn-default" %> 
      <%= link_to 'Leave Feedback', contacts_path, class: "btn btn-success" %>
  </div>
  <div id="scorecards">
    <p>Recent Scorecards:</p><% @scorecards.each do |scorecard| %>
    <div class="box panel panel-default">
      <%#= link_to image_tag(scorecard.image.url(:medium)), scorecard %>
      <div class="panel-body">
        <p>Game played: <b><%= scorecard.gametype %></b></p>
        <p><%= scorecard.description %></p>
        <p>Posted by: <strong><%= scorecard.user.name %></strong></p>
        <%= link_to scorecard_path(scorecard) do %>
          <span class="glyphicon glyphicon-eye-open"></span> View Scorecard
          <% end %><br>
        <% if scorecard.user == current_user %>
          <div class="actions">
            <%= link_to edit_scorecard_path(scorecard) do %>
              <span class="glyphicon glyphicon-edit"></span> Edit
            <% end %><br>
            <%= link_to scorecard, method: :delete, data: { confirm: "Are you sure? You can't get it back!" } do %>
              <span class="glyphicon glyphicon-trash"></span> Delete
              <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
</div>
