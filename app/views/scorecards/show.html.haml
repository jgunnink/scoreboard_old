.row
  .col-md-offset-2.col-md-8
    .panel.panel-default
      .panel-heading
        %h2= @scorecard.description
      .panel-body
        %p Body of the Scorecard in here
        %p= @scorecard.playername
      .panel-footer
        Posted by:
        %strong= @scorecard.user.name
        - if @scorecard.user == current_user
          %br
          = link_to edit_scorecard_path(@scorecard) do
            %span.glyphicon.glyphicon-edit
            Edit
          |
        = link_to 'Go Back', scorecards_path
