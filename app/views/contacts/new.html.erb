<div class="panel panel-default">
  <div class="panel-heading"><h3>Feedback</h3></div>
  <% if user_signed_in? %>
    <div class="panel-body">
      <p>Scoreboard welcomes your feedback as a BETA tester.</P>
      <%= simple_form_for @contact do |f| %>
        <div class="form-group">
          <%= f.label "Name" %>
          <%= f.text_field :name, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Email" %>
          <%= f.email_field :email, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
        <%= f.label "What's your feedback?" %>
        <%= f.text_area :message, required: true, class: "form-control", size: "1x3", placeholder: "Leave a comment..." %>
        </div>
        <div class= "hidden">
          <%= f.input :nickname, hint: 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.submit 'Send message', class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center"><br><p>To see this page, you must be signed in!</p>
    <p>
      <%= link_to "Join", new_user_registration_path, class: "btn btn-default" %>
      <%= link_to "Log In", new_user_session_path, class: "btn btn-primary" %>
    </p><br>
    </div>
  <% end %>
  <div class="panel-footer">
    <%= link_to "Go Back", :back %><br>
    <%= link_to "Home", :root %>
  </div>
</div>